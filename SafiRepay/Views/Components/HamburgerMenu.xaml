<UserControl x:Class="SafiRepay.Views.Components.HamburgerMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SafiRepay.Views.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="IndianRed">
    
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="Margin" Value="10 0 10 0"></Setter>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <Button x:Name="btn_dashboard" Content="Tableau de bord"/>
        <Button x:Name="btn_categories" Content="Catégories"/>
        <Button x:Name="btn_suppliers" Content="Fournisseurs"/>
    </StackPanel>
    
</UserControl>
